{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["service/*"],
      "@": ["service"],
      "@data": ["data"], 
      "@data/*": ["data/*"],
      "@common/*": ["libs/common/*"], 
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts",

    "main.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
