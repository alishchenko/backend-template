{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["internal/service/*"],
      "@": ["internal/service"],
      "@resources": ["resources"], 
      "@resources/*": ["resources/*"], 
      "@data": ["internal/data"], 
      "@data/*": ["internal/data/*"], 
    }
  },
  "include": [
    "internal/**/*.ts",

    "main.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
