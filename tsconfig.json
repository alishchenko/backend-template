{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["internal/*"],
      "@resources": ["resources/*"], 
    }
},
  "include": [
    "internal/**/*.ts",
    "resources/**/*.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
